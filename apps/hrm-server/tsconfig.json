{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "@loopback/build/config/tsconfig.common.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@mt-hrm/*": ["./*"],
      "@common": [
        "common/index"
      ],
      "@configurations": [
        "configurations/index"
      ],
      "@helpers": [
        "helpers/index"
      ],
      "@models": [
        "models/index"
      ]
    }
  },
  "include": [
    "src"
  ]
}
